{% extends "base_layout.html.twig" %}

{% block title  %}
    Login Page
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
{% endblock %}

{% block content %}
    <h3 class="error-message"> {{ message }} </h3>
    <div class="form-style-2">
        <div class="form-style-2-heading"> Login </div>
        {{ form_start(form) }}
            <label for="field1"><span>Username </span>{{ form_row(form.username) }}</label>
            <label for="field3"><span>Password </span>{{ form_row(form.password) }}</label>
            <label><span>&nbsp;</span><input type="submit" value="Login" /></label>
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block scripts %}
{% endblock %}
