{% extends "base_layout.html.twig" %}

{% block title  %}
    Review Page
{% endblock %}

{% block content %}
    <div class="nav-menu">
        <a href="/home" class="nav-item fa fa-home" aria-hidden="true"></a>
        <a href="/company/{{ company.id }}" class="nav-item fa fa-undo" aria-hidden="true"></a>
    </div>
    <img class="review-page" src="/images/company/{{ company.logo_src }}">
    <div class="form-style-2">
        <div class="form-style-2-heading">Review for {{ company.name }}:</div>
        {{ form_start(form) }}
            <label for="field1"><span>Name</span>{{ user.username }}</label>
            <label for="field3"><span>Rating</span>{{ form_row(form.rating) }}</label>
            <label for="field6"><span>Comment</span>{{ form_row(form.comment) }}</label>
            <label id="comment" class="error"></label>
            <label><span>&nbsp;</span><button type="button" onclick="return postReview()">Post Review</button></label>
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="../js/ajaxform.js"></script>
    <script>
        window.REDIRECT_ID = 1;
        window.COMPANY_ID = {{ company.id }};
    </script>
{% endblock %}
